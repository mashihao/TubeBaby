<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

   <ImageView
       android:src="@mipmap/login_title_bg"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RelativeLayout
            android:id="@+id/rl_login_register"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="1">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="注册"
                android:textColor="@color/colorLogin"
                android:textSize="18sp"
                android:gravity="center"/>
            <ImageView
                android:id="@+id/imv_register_index"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="28dp"
                android:src="@mipmap/login_select_bg"
                />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_login_login"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="1">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="登录"
                android:textColor="@color/colorLogin"
                android:textSize="18sp"
                android:gravity="center"/>
            <ImageView
                android:id="@+id/imv_login_index"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="28dp"
                android:src="@mipmap/login_select_bg"
                />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_register"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_marginTop="13dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="44dp"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal"
                android:background="@drawable/edittext_circle_shape">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_marginLeft="10dp"
                    android:textSize="14sp"
                    android:textColor="@color/colorLogin"
                    android:text="+86"/>

                <TextView
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="9dp"
                    android:layout_marginRight="12dp"
                    android:background="#dddddd"/>
                <EditText
                    android:id="@+id/et_register_num"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/colorLogin"
                    android:hint="请输入手机号"
                    android:textSize="14sp"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"
                    android:layout_marginRight="20dp"
                    android:inputType="phone"
                    android:background="@null"
                    />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="13dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <RelativeLayout
                android:layout_width="300dp"
                android:layout_height="44dp"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal"
                android:background="@drawable/edittext_circle_shape">

                <TextView
                    android:id="@+id/tv_register_code"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:textColor="@color/colorTextCreen"
                    android:text="获取验证码"/>

                <EditText
                    android:id="@+id/et_register_code"
                    android:layout_toLeftOf="@+id/tv_register_code"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/colorLogin"
                    android:hint="请输入验证码"
                    android:textSize="14sp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"
                    android:layout_marginRight="20dp"
                    android:inputType="number"
                    android:background="@null"
                    />


            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="13dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="44dp"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal"
                android:background="@drawable/edittext_circle_shape">
                <EditText
                    android:id="@+id/et_register_password"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:hint="设置6-8位登录密码"
                    android:textColor="@color/colorLogin"
                    android:textSize="14sp"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"
                    android:inputType="textPassword"
                    android:background="@null"
                    />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true">
                <CheckBox
                    android:id="@+id/checkbox"
                    style="@style/checkBoxStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="#999999"
                    android:text="已阅读并同意"/>

                <TextView
                    android:textColor="#FB7F6C"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:text="服务协议  "/>

                <TextView
                    android:textColor="#FB7F6C"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:text="隐私条款"/>

                <TextView
                    android:textColor="#999999"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:text="及"/>

                <TextView
                    android:textColor="#FB7F6C"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:text="免责声明"/>
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="35dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/btn_login_register"
                android:layout_centerHorizontal="true"
                android:text="注册"
                android:textColor="@color/white"
                android:background="@drawable/button_circle_shape"
                android:layout_width="300dp"
                android:layout_height="44dp" />
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_login_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_marginTop="13dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="44dp"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal"
                android:background="@drawable/edittext_circle_shape">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:background="@mipmap/icon_login_num"/>

                <TextView
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="9dp"
                    android:layout_marginRight="12dp"
                    android:background="#dddddd"/>
                <EditText
                    android:id="@+id/et_login_num"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/colorLogin"
                    android:hint="请输入手机号"
                    android:textSize="14sp"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"
                    android:layout_marginRight="20dp"
                    android:inputType="phone"
                    android:background="@null"
                    />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="13dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="44dp"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal"
                android:background="@drawable/edittext_circle_shape">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:background="@mipmap/icon_login_psw"/>

                <TextView
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="9dp"
                    android:layout_marginRight="12dp"
                    android:background="#dddddd"/>
                <EditText
                    android:id="@+id/et_login_psw"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/colorLogin"
                    android:hint="请输入密码"
                    android:textSize="14sp"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"
                    android:layout_marginRight="20dp"
                    android:inputType="textPassword"
                    android:background="@null"
                    />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="46dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/btn_login_login"
                android:layout_centerHorizontal="true"
                android:text="登录"
                android:textColor="@color/white"
                android:background="@drawable/button_circle_shape"
                android:layout_width="300dp"
                android:layout_height="44dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="40dp">
            <TextView
                android:id="@+id/tv_login_reset"
                android:layout_centerHorizontal="true"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:text="忘记密码？"
                android:textColor="@color/colorTextCreen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>